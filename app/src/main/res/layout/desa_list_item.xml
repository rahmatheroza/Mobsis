<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight">

        <TextView
            android:id="@+id/kodeDesa"
            style="@style/text_view_style"
            android:text="Village Code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="placeholder text" />

        <TextView
            android:id="@+id/namaDesa"
            style="@style/text_view_style"
            android:layout_marginStart="16dp"
            android:text="Village Name"
            app:layout_constraintStart_toEndOf="@+id/kodeDesa"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="placeholder text" />

        <TextView
            android:id="@+id/jumlahPenduduk"
            style="@style/text_view_style"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ibuHamil"
            style="@style/text_view_style"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/kodeDesa" />

        <TextView
            android:id="@+id/bayi"
            style="@style/text_view_style"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/kodeDesa" />

        <TextView
            android:id="@+id/balita"
            style="@style/text_view_style"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/kodeDesa" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/icon_for_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kodeDesa"
            app:srcCompat="@drawable/ic_action_pregnant" />

        <ImageView
            android:id="@+id/imageView3"
            style="@style/icon_for_text_view"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ibuHamil"
            app:layout_constraintTop_toBottomOf="@+id/kodeDesa"
            app:srcCompat="@drawable/ic_action_balita" />

        <ImageView
            android:id="@+id/imageView4"
            style="@style/icon_for_text_view"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/bayi"
            app:layout_constraintTop_toBottomOf="@+id/namaDesa"
            app:srcCompat="@drawable/ic_action_child" />

        <TextView
            android:id="@+id/reseptifitasTanggal"
            style="@style/text_view_style"
            android:text="01/20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jumlahPenduduk" />

        <ImageView
            android:id="@+id/imageView5"
            style="@style/icon_for_text_view"
            android:baselineAlignBottom="false"
            app:layout_constraintEnd_toStartOf="@+id/jumlahPenduduk"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_action_people" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>